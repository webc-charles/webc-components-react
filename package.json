{
  "name": "@webc-charles/components-react",
  "version": "1.0.23",
  "packageManager": "pnpm@10.27.0",
  "description": "A lightweight React component library with CSS variables for easy theming",
  "repository": {
    "type": "git",
    "url": "https://github.com/webc-charles/webc-components-react.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./index.css": "./dist/index.css",
    "./scss/*": "./src/styles/*"
  },
  "files": [
    "dist",
    "src/styles"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "stylelint": "stylelint \"src/**/*.scss\" --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "sync-version": "npm pkg set version=$(npm view @webc-charles/components-react version --registry=https://npm.pkg.github.com)"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "embla-carousel": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "lucide-react": "^0.562.0",
    "sass": "^1.93.2"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@storybook/addon-docs": "^10.0.4",
    "@storybook/react-vite": "^10.1.11",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/node": "^22.15.0",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitest/mocker": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "esbuild-sass-plugin": "^3.3.1",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "postcss-modules": "^6.0.1",
    "prettier": "3.0.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-test-renderer": "^19.2.0",
    "storybook": "^10.0.4",
    "stylelint": "^16.25.0",
    "stylelint-config-recommended": "^17.0.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-order": "^7.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
